<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TribeJam" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>

    </style>

    <style name="EditTextPurple" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/purple_200</item>
        <item name="android:textColorPrimary">@color/purple_200</item>
        <item name="android:colorAccent">@color/purple_200</item>
        <item name="android:colorControlNormal">@color/purple_200</item>
        <item name="android:colorControlActivated">@color/purple_200</item>

    </style>

    <style name="EditTextPurpleDark" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/purple_accent</item>
        <item name="android:textColorPrimary">@color/purple_accent</item>
        <item name="android:colorAccent">@color/purple_accent</item>
        <item name="android:colorControlNormal">@color/purple_accent</item>
        <item name="android:colorControlActivated">@color/purple_accent</item>

    </style>
    <style name="ToolbarName" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>